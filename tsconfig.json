{
  "compilerOptions": {
    "target": "es5",
    "baseUrl": ".",
		"paths": {
			"@components/*": [
				"./src/components/*"
			],
			"@store/*": [
				"./src/store/*"
			],
			"@hooks/*": [
				"./src/hooks/*"
			],
			"@src/*": [
				"./src/*"
			],
		},
		"plugins": [
			{
				"name": "typescript-plugin-css-modules"
			}
		],
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noFallthroughCasesInSwitch": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx",
	"noImplicitAny": true,
	"alwaysStrict": true,
    "strictNullChecks": true,
    "strictFunctionTypes": true,
  },
	"include": [
		"src"
	],
	"exclude": [
		"node_modules",
		".vscode"
	]
}
